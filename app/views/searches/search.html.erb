<div class="container">
	<div class="row">
		<div class="col-md-12">
			<h2><%= @model %>s search for "<%= @search %>"</h2>
			<% if @model == "User" %>
					<table class="table">
					<tr>
					<th>image</th>
					<th>name</th>
					<th></th>
					</tr>
					<% @users.each do |user| %>
						<tr>
							<td class="col-md-2">
								<%= image_tag user.get_profile_image(100,100) %>
							</td>
							<td>
								<%= user.name %>
							</td>
							<%= render 'users/follow', user: user %>
							<td>
								<%= link_to 'Show', user_path(user.id)%>
							</td>
						</tr>
					<% end %>
				</table>
			<% elsif @model == "Book" %>
				<table class="table">
					<tr>
					<th></th>
					<th>Title</th>
					<th>Opinion</th>
					</tr>
					<% @books.each do |book| %>
						<tr>
							<td class="col-md-2">
								<%= link_to(user_path(book.user_id)) do %>
									<%= image_tag book.get_image %>
								<% end %>
							</td>
							<td>
								<%= link_to(book_path(book.id)) do %>
									<%= book.title %>
								<% end %>
							</td>
							<td>
								<%= book.body %>
							</td>
							<%= render 'books/favorite', book: book %>
						</tr>
					<% end %>
				</table>
			<% end %>
		</div>
	</div>
</div>