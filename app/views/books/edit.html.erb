<div class="container">
	<div class="row">
		<div class="mx-auto col-6">
			<h1>Editing Book</h1>
			<%= form_with model: @book do |f| %>
				<h5>Title</h5>
				<%= f.text_field :title, class: 'form-control mb-3' %>
				<h5>Opinion</h5>
				<%= f.text_area :body, class: 'form-control mb-3' %>
				<%= f.submit 'Update Book', class: 'btn btn-success mb-3'%>
			<% end %>
			<%= link_to 'Show', book_path(params[:id]) %>
			|
			<%= link_to 'Back', books_path %>
		</div>
	</div>
</div>