<div class="container">
	<div class="row">
		<%= render 'users/info', user: @user %>
		<div class="col-8">
			<h2>Books</h2>
			<table class="table">
				<tr>
				<th></th>
				<th>Title</th>
				<th>Opinion</th>
				</tr>
				<% @books.each do |book| %>
					<tr>
						<td class="col-2">
							<%= link_to(user_path(book.user_id)) do %>
								<%= image_tag book.get_image %>
							<% end %>
						</td>
						<td>
							<%= link_to(book_path(book.id)) do %>
								<%= book.title %>
							<% end %>
						</td>
						<td>
							<%= book.body %>
						</td>
					</tr>
				<% end %>
			</table>
		</div>
	</div>
</div>